<style>
    table, th, td {
        border: 1px solid black;
    }
</style>

<h1>Lista Di Tutti Gli Utenti</h1>


<table style="width:100%">
    <tr>
        <th>Nome Utente</th>
        <th>Nome</th>
        <th>Cognime</th>
        <th>Email</th>
    </tr>

    <% User.all.each do |user| %>
        <tr>
            <td><%= user.username %></td>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email %></td>
            <td>
                <table style="width:100%">
    	            <td><%= link_to "Edit", edit_user_registration_path(user.id) %></td>
		            <td><%= link_to "Destroy", user_path(user.id), method: :delete, data: { confirm: "Are you sure?" } %></td>
  		        </table>
	        </td>
        </tr>
    <% end %> 
 
</table> 





