<!DOCTYPE html>
<html>
  <head>
    <title>Youstud</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="../../../vendor/assets/css/styles.css" rel="stylesheet" />

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg mb-5 navbar-dark bg-primary">
      <div class="container">
        <a class="navbar-brand" href="/">YOUSTUD</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
        <% if user_signed_in? %>
          <%= render "layouts/user_nav" %>
        <% end %>
      </div>
    </nav>
    <div class="container">
      <div class="col-lg-12">
        <%= yield %>
      </div>
    </div>
    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="../../../vendor/assets/js/scripts.js"></script>
  </body>
</html>
